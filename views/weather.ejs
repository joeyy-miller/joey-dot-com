<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5 joey-card">
        <div class="card-body">
          <h2 class="text-center mb-4 joey-title">Joey Weather Forecast</h2>
          <form action="/weather" method="GET" class="mb-4">
            <div class="input-group">
              <input type="text" class="form-control joey-input" placeholder="Enter a Joey city" name="city" required>
              <button class="btn btn-primary joey-button" type="submit">Get Joey Weather</button>
            </div>
          </form>
          <% if (locals.weatherData) { %>
            <div class="joey-weather-info">
              <h3><%= weatherData.name %> Weather</h3>
              <p>Temperature: <%= weatherData.main.temp %>°C</p>
              <p>Feels like: <%= weatherData.main.feels_like %>°C</p>
              <p>Description: <%= weatherData.weather[0].description %></p>
              <p>Humidity: <%= weatherData.main.humidity %>%</p>
              <p>Wind Speed: <%= weatherData.wind.speed %> m/s</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>