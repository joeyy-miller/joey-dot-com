<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5 joey-card">
        <div class="card-body">
          <h2 class="text-center mb-4 joey-title">Forgot Your Joey Password?</h2>
          <% if (locals.error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <% if (locals.message) { %>
            <div class="alert alert-success"><%= message %></div>
          <% } %>
          <form action="/forgot-password" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label">Your Joey Name</label>
              <input type="text" class="form-control joey-input" id="username" name="username" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 joey-button">Send Joey Reminder</button>
          </form>
          <p class="mt-3 text-center">
            <a href="/login" class="joey-link">Back to Joey Login</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>